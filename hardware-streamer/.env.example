# RatoNet Field Agent (hardware do streamer)

# Servidor (VPS)
FIELD_SERVER_WS_URL=ws://seu-servidor:8000/ws/field
FIELD_STREAMER_ID=SEU_UUID
FIELD_API_KEY=SUA_API_KEY

# Interfaces de rede para monitorar (separadas por virgula)
FIELD_NETWORK_INTERFACES=

# Telemetria
FIELD_TELEMETRY_INTERVAL_S=1.0
FIELD_GPS_DEVICE=localhost:2947
FIELD_STARLINK_ADDR=192.168.100.1:9200

# Video (opcional, quando usar --video)
FIELD_VIDEO_DEVICE=/dev/video0
FIELD_VIDEO_BITRATE=4000k
FIELD_VIDEO_RESOLUTION=1920x1080
FIELD_VIDEO_CODEC=libx264

# SRT
SRT_BASE_PORT=9000
SRT_LATENCY_MS=500
SRT_PASSPHRASE=

# SRTLA (opcional)
SRTLA_ENABLED=false
SRTLA_SEND_PORT=5000
SRTLA_REC_PORT=5001
SRTLA_BINARY_PATH=
